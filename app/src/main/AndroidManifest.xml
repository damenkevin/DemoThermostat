<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.tue.demothermostat">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Thermostat"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".ThermostatActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WeekOverview"
            android:label="Thermostat"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".TestingWS"
            android:label="Thermostat"></activity>
        <activity
            android:name=".WeekDay"
            android:label="@string/title_activity_week_day"
            android:theme="@style/Theme.AppCompat.NoActionBar"></activity>
    </application>

</manifest>